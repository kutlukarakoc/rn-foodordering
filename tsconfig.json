{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
		"baseUrl": ".",
    "paths": {
			"@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
			"@/constants/*": ["src/constants/*"],
			"@/types": ["src/types.ts"],
			"@/assets": ["assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
